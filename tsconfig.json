{
  "compilerOptions": {
    "target": "ES2020",                              
    "module": "commonjs",                            
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                  
    "skipLibCheck": true,
    "resolveJsonModule": true, // para usar Json na aplicação
    "outDir": "./build" // pra onde vai todos os arquivos que o typescript transpilar
  }
}
